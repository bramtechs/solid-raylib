{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug SolidJS Raylib",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/solid-raylib-demo/dist/index.js",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/packages/solid-raylib-demo/dist/**/*.js"],
      "sourceMaps": true,
      "runtimeArgs": ["--enable-source-maps"],
      "console": "integratedTerminal"
    }
  ]
}
